@model CollectionApp.ViewModels.EditItemViewModel
@{

    ViewBag.Title = "Edit Item";

}
<form asp-action="EditItem" asp-controller="Collections" asp-route-id="@Model.Id" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="ItemName">Item Name</label>
        <input type="text" asp-for="ItemName" />
        <span asp-validation-for="ItemName"></span>
    </div>
    <div>
        <label asp-for="NewImage"></label><br />
        <input type="file" asp-for="NewImage" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</form>
@if (Model.Image != null)
{
    <img style='width:400px; height:300px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))" />
}
